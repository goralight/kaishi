{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "react"
    ],
    "rules": {
        "indent": [
            1,
            2,
            {"SwitchCase": 1}
        ],
        "no-multiple-empty-lines": [
          1,
          { "max": 1, "maxEOF": 0 }
        ],
        "no-trailing-spaces": [
          1,
          { "skipBlankLines": true }
        ],
        "object-curly-spacing": [
          1,
          "always"
        ],
        "comma-dangle": [
          1,
          "never"
        ],
        "linebreak-style": [
            1,
            "unix"
        ],
        "quotes": [
            1,
            "single"
        ],
        "semi": [
            1,
            "never"
        ],
        "eol-last": [
          1,
          "always"
        ],
        "@typescript-eslint/no-explicit-any": 1,
        "@typescript-eslint/explicit-function-return-type": 1,
        "@typescript-eslint/no-unused-vars": [
          1,
          { "ignoreRestSiblings": true }
        ]
    }
}
